@model Artist
@{
}
<style>
    .edit{        
        width:max-content;
        padding: 20px;
        background-color:darksalmon;
        border: solid;
        border-color:antiquewhite;
        font-size:25px;
    }
</style>
<h1>Artist</h1>
<div class = "edit">
@using(Html.BeginForm("Create","Artists",FormMethod.Post))
{
    <p>
        @Html.HiddenFor(m=>m.Id)
    </p>
    <p>
        @Html.LabelFor(m=> m.Name, "Name")
        <br />
        @Html.TextBoxFor(m => m.Name)
    </p>
    <p>
        @Html.LabelFor(m=> m.Surname, "Surname")
        <br />
        @Html.TextBoxFor(m => m.Surname)
    </p>
    <p>
        @Html.LabelFor(m=> m.BirthDate, "Date of Birth")
        <br />
        @Html.TextBoxFor(m => m.BirthDate, new{type ="calendar"})
    </p>
    <p>
        @Html.LabelFor(m=> m.Type, "Role")
        <br />
        @Html.TextBoxFor(m => m.Type)
    </p>
    <p>
        <input type="submit" value="Save" />
    </p>
}
</div>

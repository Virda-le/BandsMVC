@model List<Album>;
@{
}
<style>

    .album-list {
        background-color:azure;        
        border-top: solid;        
        border-bottom: solid;
        border-color: blanchedalmond;
    }
</style>
<div class="container">

    <h1>Albums</h1>


    <div class="album-list">
        <table class="table">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Year</th>
                <th>Band</th>            
                <th> </th>

            </tr>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.Id</td>
                    <td>@m.Name</td>
                    <td>@m.Year</td>
                
                    <td>@m.Band.Name</td>                
                    <td>
                    @Html.ActionLink("Edit","Edit", m) |
                    @Html.ActionLink("Delete","Delete", new {id = m.Id})
                    </td>
                </tr>
            }
        </table>    
    </div>
    <p></p>
    
        <button type="button" class="btn btn-info btn-block" onclick="location.href='@Url.Action("Create","Albums")'">
        Create new
        </button> 
</div>

